@{
    ViewData["Title"] = "My achieved awards";
    ViewData["NavItem"] = "Awards";
    ViewData["SeoDescription"] = "A showcase of all of the award I have achieved.";
    ViewData["SeoCanonical"] = "Awards";
}

@section SchemaOrg {
    <meta property="og:url" content="https://bradley.chatha.dev/Awards" />
    <meta property="og:title" content="Awards I have achieved - Bradley Chatha" />
    <meta property="og:description" content="@ViewData["SeoDescription"]" />
    <meta property="og:image" content="https://bradley.chatha.dev/favicon.ico" />
    <meta property="og:type" content="website" />
}

<article id="app" class="award">
    <h1>
        <span>Innovation Award - School Farm Awards 2019</span>
    </h1>
    <carousel :autoplay="true"
              :loop="true"
              :autoplay-timeout="5000"
              :sources="['/img/school_farm_award_stage.jpg', '/img/school_farm_award_closeup.jpg']">
    </carousel>
    <div class="description">
        <p>
            My <a href="#">FarmMaster</a> project was nominated by Aim Educational Ltd for the School Farm Network's
            <em>'Best use of the school curriculum'</em> award.
        </p>
        <p>
            The project was short listed, and moved to be nominated for the
            <em>'Innovative or Inspirational project'</em> award, where it then won
            first place.
        </p>
    </div>
</article>

@section Scripts {
    <script src="/js/vue_awards.js" asp-append-version="true"></script>
    <script>
        Vue.component("carousel", components.default.Carousel);
        new Vue({
            el: "#app"
        });
    </script>
}